{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/upload",
            "methods": ["POST"],
            "dest": "api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
} 